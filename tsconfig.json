{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "target": "ES2020",
    "lib": ["ES2021", "DOM"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "types": ["react", "react-native"],
    "moduleResolution": "bundler"
  },
  "include": ["app", "src", "index.js", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["_trash", "android", "ios", "node_modules"]
}
